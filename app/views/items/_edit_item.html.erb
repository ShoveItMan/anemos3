<div class="container rounded bg-success text-white p-3">
  <h2>Edit</h2>
  <%= form_with model:  @item do |form| %>
    <p>
      <%= form.label "Name", class:"form-label" %>
      <%= form.text_field :name, class:"form-control" %>
      <br>
      <%= form.label "Price", class:"form-label" %>
      <%= form.number_field :price, in: 1.00..999.99, step: 0.01, class:"form-control" %>
      <br>
      <%= form.submit "Update", class:"btn btn-food-item" %>
    </p>
  <% end %>

  <%= 
    button_to "Destroy", 
    item_path(@item),
    class: "btn btn-danger",
    method: :delete,
    data: { confirm: "This will also erase the item.\nAre you sure ?"}
  %>
</div>