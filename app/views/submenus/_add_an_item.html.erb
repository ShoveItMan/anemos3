<div class="container bg-success rounded text-light p-3 me-3">
  <h2>Add an item :</h2>
  <%= form_with model: [@submenu, @submenu.items.build] do |form| %>
    <p>
      <%= form.label :name, class:"form-label" %>
      <%= form.text_field :name, class:"form-control" %>
      <br>
      <%= form.label :price, class:"form-label" %>
      <%= form.number_field :price, in: 1.00..999.99, step: 0.01, class:"form-control" %>
      <br>
      <%= form.submit "Create Item", class:"btn btn-food-item" %>
    </p>
  <% end %>
</div>